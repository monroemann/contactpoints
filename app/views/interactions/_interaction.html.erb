<div id="<%= dom_id interaction %>">
  <p>
    <strong>Name:</strong>
    <%= interaction.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= interaction.description %>
  </p>

  <p>
    <strong>With Whom:</strong>
    <%= interaction.contact_full_name %>
  </p>

  <p>
    <strong>Length:</strong>
    <%= interaction.length %>
  </p>

  <p>
    <strong>Interaction Type:</strong>
    <%= interaction.interaction_type&.name %>
  </p>

  <p>
    <strong>Who Initiated Contact?</strong>
    <%= interaction.you_initiated_contact ? "You did.  Good job!" : "No, #{interaction.contact.first_name} initiated contact.  You're popular!" %>
  </p>


  <p>
    <strong>Interaction Categories:</strong>
    <% interaction.interaction_categories.each do |category| %>
      <%= category.name %>
    <% end %>
  </p>

  <p>
    <strong>Emotional Reactions:</strong>
    <% interaction.emotional_reactions.each do |reaction| %>
      <%= reaction.name %>
    <% end %>
  </p>  

</div>
