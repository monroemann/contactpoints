<div class="container">
  <div class="card">

    <div class="mx-auto py-5">

      <div class="container">

        <p id="notice" style="color:green"><%= notice %></p>

        <h1 style="margin-bottom: 10px">Contact Groups</h1>

        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @contact_groups.each do |contact_group| %>
              <tr>
                <td><%= contact_group.name %></td>
                <td><%= contact_group.description %></td>
                <td><%= link_to 'Show', contact_group %></td>
                <td><%= link_to 'Edit', edit_contact_group_path(contact_group) %></td>
                <td><%= link_to 'Destroy', contact_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'New Contact Group', new_contact_group_path, class: 'button-link' %>

        <%== pagy_bootstrap_nav(@pagy) %>

      </div>

    </div>
  </div>
</div>