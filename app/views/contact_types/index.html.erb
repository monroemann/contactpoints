<div class="container">
  <div class="card">

    <div class="mx-auto py-5">

      <p id="notive" style="color: green"><%= notice %></p>

      <h1>Contact Types</h1>

      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @contact_types.each do |contact_type| %>
            <tr>
              <td><%= contact_type.name %></td>
              <td><%= link_to 'S', contact_type %></td>
              <td><%= link_to 'E', edit_contact_type_path(contact_type) %></td>
              <td><%= link_to 'D', contact_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Contact Type', new_contact_type_path %>

    </div>
  </div>
</div>