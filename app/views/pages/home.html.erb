<div class="container">

	<br>

	<div class="row">
		<div class="col">
			<h4>Recommended Next To Contact</h4>
				<!-- 1 with zero points, 1 recently_added_contact, 1 whose points have dropped recently -->
				<!-- 1 you haven't talked to in six months -->
				<!-- To begin with, it can be just 5 random contacts, that you have not contacted in the last 6 months (or , that you have not skipped in last month.  Then add more from there -->
				<!-- Need to add a 'skip' button that skips for 1 month -->
				<table class="table">
				<thead>
			    <tr>
			      <th>Name</th>
			      <th>Mobile</th>
			      <th>Email</th>
			      <th>Points</th>
			    </tr>
			  </thead>

			  <tbody>
			    <% @next_to_contact.each do |contact| %>
			      <tr>
							<td><%= link_to contact.full_name, contact %></td>
			        <td><%= link_to contact.mobile_phone_1, contact %></td>
			        <td><%= link_to contact.email_1, contact %></td>
			        <td><%= link_to contact.total_points, contact %></td>
			      </tr>
			    <% end %>
			  </tbody>
			</table>
		</div>
	
	<div class="row">
		<div class="col">
			<h4>Going Up (<%= @going_up.count %>)</h4>
				<!-- All those whose points have gone up recently, most poits gained at top -->
			  <table class="table">
				  <thead>
				    <tr>
				      <th>Name</th>
				    </tr>
				  </thead>

				  <tbody>
				    <% @going_up.first(5).each do |contact| %>
				      <tr>
				        <td style="display: flex; justify-content: space-between;">
				        	<%= link_to contact.full_name, contact %>
				        	<%= contact[:points] %>
				        </td>
				      </tr>			       
				    <% end %>
				  </tbody>
				</table>
		</div>

		<div class="col">
			<h4>Going Down (<%= @going_down.compact.count %>)</h4>
				<!-- All those whose points have gone down recently, most points lost at top -->
				<table class="table">
				<thead>
			    <tr>
			      <th>Name</th>
			    </tr>
			  </thead>

			  <tbody>
					<% if @going_down %>
					  <% @going_down.compact.first(5).each do |contact| %>
					    <% if contact %>
					      <tr>
					        <td style="display: flex; justify-content: space-between;">
					        	<%= link_to contact.full_name, contact %>
					        	<%= contact[:points] %>
					        </td>
					      </tr>
					    <% end %>
					  <% end %>
					<% end %>

			  </tbody>
			</table>
		</div>	

		<div class="col">
			<h4>At Zero (<%= @at_zero.count %>)</h4>
				<!-- All contacts with zero points -->
				<table class="table">
				<thead>
			    <tr>
			      <th>Name</th>
			    </tr>
			  </thead>

			  <tbody>
			    <% @at_zero.first(5).each do |contact| %>
			      <tr>
			        <td style="display: flex; justify-content: space-between;">
			        	<%= link_to contact.full_name, contact %>
			        	<%= contact[:points] %>
			        </td>
			      </tr>
			    <% end %>
			  </tbody>
			</table>
		</div>

		<div class="col">
			<h4>Holding Steady (<%= @holding_steady.count %>)</h4>
<!-- All those whose points have stayed at same value for last month -->
				<table class="table">
